# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

POST    /todos              controllers.TodoController.add
#PUT     /todos/:id          controllers.TodoController.update
GET     /todos/:id          controllers.TodoController.get(id: Int)
DELETE  /todos/:id          controllers.TodoController.delete(id: Int)
GET     /todos              controllers.TodoController.getAll

GET     /history/todos      controllers.TodoController.getHistory

